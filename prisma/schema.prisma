generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Video {
  id        String   @id @default(uuid())
  filename  String
  views     Int      @default(0)
  avgWatch  Float    @default(0)
  createdAt DateTime @default(now())

  watches   Watch[]
}

model Watch {
  id        String   @id @default(uuid())
  videoId  String
  percent  Float
  createdAt DateTime @default(now())

  video Video @relation(fields: [videoId], references: [id])
}
